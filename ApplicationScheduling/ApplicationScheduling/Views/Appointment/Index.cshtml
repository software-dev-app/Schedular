@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<div class="row">
    @if(TempData.ContainsKey("newAdminSignUp"))
    { 
        <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" arial-label="close">x</a>
            <strong>Account create for @TempData["newAdminSignUp"].ToString()</strong>
        </div>
    }
    <div class="container">
        @if (User.IsInRole(ApplicationScheduling.Utility.Helper.Admin))
        {
            <div class="row">
                <div class="form-group row" id="divDoctorList" style="width:30%">
                    <label>Select Doctor</label>
                    @Html.DropDownList("doctorId", new SelectList(ViewBag.DoctorList, "Id", "Name"), new
                    {
                        @class = "form-control select2",
                    @onchange = "onDoctorChange();"
                })
                </div>
                <div class="col-3 offset-5 float-right">
                    <a asp-controller="Account" asp-action="Register" class="btn-secondary form-control">Admin Register</a>
                </div>
            </div>
        }
        <div id="calendar"></div>
    </div>
</div>

<partial name="_AddEditAppointment" />

<div class="text-right pt-2">
    <p>@HttpContextAccessor.HttpContext.Session.GetString("ssuserName")'s account is logged in</p>
</div>